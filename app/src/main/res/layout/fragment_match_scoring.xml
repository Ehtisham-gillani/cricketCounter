<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#F5F5F5"
    tools:context=".ui.fragments.matchScoringFragment.MatchScoringFragment">

        <!-- Team Score Header -->
        <TextView
            android:id="@+id/teamName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF"
            android:padding="8dp"
            android:text="Pakistan, Inning1, (1 overs)"
            android:textSize="16sp"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Score Display -->
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="0/0          (0.0)"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/teamName" />

        <!-- Run Rate Info -->
        <LinearLayout
            android:id="@+id/rateInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            app:layout_constraintTop_toBottomOf="@id/score">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="CRR:0.00" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="RRR:NA" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Target:NA" />
        </LinearLayout>

        <!-- Batsman Stats -->
        <TableLayout
            android:id="@+id/batsmanTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:stretchColumns="*"
            app:layout_constraintTop_toBottomOf="@id/rateInfo">

            <TableRow android:background="#E8E8E8">
                <TextView android:text="Batsman" android:layout_weight="2.5" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="R" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="B" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="4s" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="6s" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="SR" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <TextView android:text="Abbas*" android:layout_weight="2.5" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0.00" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
            </TableRow>

            <TableRow>
                <TextView android:text="Ehtisham" android:layout_weight="2.5" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0.00" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
            </TableRow>
        </TableLayout>

        <!-- Bowler Stats -->
        <TableLayout
            android:id="@+id/bowlerTable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:stretchColumns="*"
            app:layout_constraintTop_toBottomOf="@id/batsmanTable">

            <TableRow android:background="#E8E8E8">
                <TextView android:text="Bowler" android:layout_weight="2.5" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="O" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="M" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="R" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="W" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
                <TextView android:text="ER" android:gravity="center" android:layout_weight="1" android:padding="4dp" android:textStyle="bold" />
            </TableRow>

            <TableRow>
                <TextView android:text="Jayesh" android:layout_weight="2.5" android:padding="4dp" />
                <TextView android:text="0.0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
                <TextView android:text="0.00" android:gravity="center" android:layout_weight="1" android:padding="4dp" />
            </TableRow>
        </TableLayout>

        <!-- This Over Label -->
        <TextView
            android:id="@+id/thisOverLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="This over:"
            android:textSize="14sp"
            android:layout_margin="8dp"
            app:layout_constraintTop_toBottomOf="@id/bowlerTable"
            app:layout_constraintStart_toStartOf="parent"/>

        <!-- Delivery Options -->
        <LinearLayout
            android:id="@+id/deliveryOptions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="4dp"
            app:layout_constraintTop_toBottomOf="@id/thisOverLabel">

            <CheckBox android:id="@+id/wicketCheckbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wicket" android:textSize="12sp" />
            <CheckBox android:id="@+id/wideCheckbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Wide" android:textSize="12sp" />
            <CheckBox android:id="@+id/nbCheckbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="NB" android:textSize="12sp" />
            <CheckBox android:id="@+id/byesCheckbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Byes" android:textSize="12sp" />
            <CheckBox android:id="@+id/legByCheckbox" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="LegBy" android:textSize="12sp" />
        </LinearLayout>

        <!-- Run Buttons -->
        <GridLayout
            android:id="@+id/runButtonsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:rowCount="2"
            android:padding="4dp"
            app:layout_constraintBottom_toTopOf="@id/bottomButtons">

            <Button android:text="0" android:layout_columnWeight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="1" android:layout_columnWeight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="2" android:layout_columnWeight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="SWAP" android:layout_columnWeight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="3" android:layout_columnWeight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="4" android:layout_columnWeight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="6" android:layout_columnWeight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="UNDO" android:layout_columnWeight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
        </GridLayout>

        <!-- Bottom Action Buttons -->
        <LinearLayout
            android:id="@+id/bottomButtons"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp"
            app:layout_constraintBottom_toBottomOf="parent">

            <Button android:text="OVERS" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="BATSMAN" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="BOWLER" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="2dp" android:backgroundTint="#00C853" />
            <Button android:text="RETIRE" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:layout_margin="2dp" android:backgroundTint="#B71C1C" />
        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>